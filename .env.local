AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_SESSION_TOKEN=your-session-token
AWS_REGION=us-east-1

APP_TITLE=BookChat AI - Your Literary Companion
APP_DESCRIPTION=AI-powered chatbot for book discussions using RAG and PDO prompt engineering

CHROMA_DB_PATH=./chroma_db
EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

REQUEST_TIMEOUT=10
RATE_LIMIT_INTERVAL=0.1

LLM_MODEL=amazon.nova-lite-v1:0
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=5000

LOG_LEVEL=INFO

LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_TRACING_V2=true
LANGSMITH_PROJECT="bookchat-ai"